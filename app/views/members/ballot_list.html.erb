<% content_for :heading, 'Member List' %>

<p>
  This is a list of all current Ordinary Members whose membership has not yet expired or is valid for life.
  Please use ctrl+F (cmd+F on Mac) to search this page from your web browser.
  Please contact charlie@charliejonas.co.uk if you encounter issues with the data on this page.
</p>

<table class="table table-condensed table-bordered table-hover">
  <thead>
    <%= content_tag :tr do %>
      <%= content_tag(:td, 'Full Name') %>
      <%= content_tag(:td, 'CRSid') %>
      <%= content_tag(:td, 'Graduation Year') %>
      <%= content_tag(:td, 'Expiry Date') %>
    <% end %>
  </thead>
  <tbody>
    <% @members.each do |member| %>
      <%= content_tag :tr do %>
        <%= content_tag(:td, link_to(member.full_name, member)) %>
        <%= content_tag(:td, member.crsid) %>
        <%= content_tag(:td, member.graduation_year) %>
        <%= content_tag(:td, member.expiry) %>
      <% end %>
    <% end %>
  </tbody>
</table>
